<div class="container">
  <h2 align="center">Join Now</h2>
  <%= form_for :user , url: '/users',id: "new_join" do |f| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <%= f.email_field :email, :placeholder=>"Email", :class=>"form-control"%>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Password</label>
      <%= f.password_field :password, :placeholder=>"Password", :class=>"form-control"%>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Password Confirmation</label>
      <%= f.password_field :password_confirmation, :placeholder=>"Password confirmation", :class=>"form-control"%>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Upload Profile</label>
      <%= f.file_field :avatar,  :class=>"form-control"%>
    </div>

     <%= f.submit "Submit",:class=>"btn btn-default"%>  

  <% end %>
</div>