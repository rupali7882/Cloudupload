<div class="container">
  <h2 align="center">Reset Your Password</h2>
  <%= form_for @user, :url => password_update_user_path(params[:id]) do |f| %>
    
    <div class="form-group">
      <label for="exampleInputEmail1">Password</label>
      <%= f.password_field :password, :placeholder=>"Password", :class=>"form-control"%>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Password Confirmation</label>
      <%= f.password_field :password_confirmation, :placeholder=>"Password confirmation", :class=>"form-control"%>
    </div>

   <%= f.submit "Update Password" ,:class=>"btn btn-default" %>
  <% end %>
</div>

