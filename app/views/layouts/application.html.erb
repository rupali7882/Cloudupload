<!DOCTYPE html>
<html>
<head>
  <title>EnDeApp</title>

  <%= stylesheet_link_tag   'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "layouts/flash_messages", flash: flash %> 

<% if current_user %>
  Signed in as <%= decript_string(current_user.email) %> | <%= link_to "Logout", logout_path%>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>

<%= yield %>

</body>
</html>